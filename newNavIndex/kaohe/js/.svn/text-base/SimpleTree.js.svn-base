			this.find("a").click(function(){ $(this).parents("li").click(); return false; });
			
			/* ????? <li> ??????? */
			this.find("li").click(function(){
				/*
				 * ??????????? <li>
				 * 1.????????????????????????? <li> ??????????????????????????????
				 * 2.???????????????????????????????????? true ????????? false????????????? true??
				 * 3.???????????
				 */
				var a=$(this).find("a")[0];
				if(typeof(a)!="undefined")
					option.click(a);	/* ???????????????? undefined????????? */
				
